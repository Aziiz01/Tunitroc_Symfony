        <div class="container">

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id de l'échange</th>
            <th>état de la livraison</th>
            <th>Modifier</th>
            <th>Suppression</th>
        </tr>
    </thead>
    <tbody>
        {% for echange in echanges %}
            <tr>
                <td>{{ echange.id }}</td>
                <td>{{ echange.etat }}</td>
               <td>{{ echange.location }}</td>

                <td>
  <a href="{{ path('update_trechange', {'id': echange.id}) }}" class="btn btn-primary">Modifier</a>
                </td>
<td><a href="{{ path('delete_echange', {'id': echange.id}) }}" onclick="return confirm('Are you sure you want to delete this exchange?')"><i class="fa fa-trash"></i></a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>
</div>
<style>
  /* Container for the form and table */
  .parent-container {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 50vh;
    background-color: #f6f6f6;
    margin-left: 20px;
  }

  /* Style for the form */
  #contact-form {
    display: flex;
    flex-direction: column;
    width: 400px;
    padding: 30px;
    background-color: #fff;
    box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
  }

  /* Style for the form labels */
  #contact-form label {
    display: block;
    margin-bottom: 5px;
    font-weight: 600;
    color: #4a4a4a;
    text-align: left;
  }

  /* Style for the form fields */
  #contact-form input[type="text"] {
    width: 100%;
    padding: 12px;
    border: none;
    border-radius: 4px;
    box-sizing: border-box;
    margin-bottom: 20px;
    background-color: #f6f6f6;
    color: #4a4a4a;
  }

  /* Make the table smaller */
table {
  font-size: 14px;
}

/* Position the table on the left side of the screen */
.container {
  margin: 20px;
  margin-right: 0;
  width: calc(100% - 10px);
  float: left;
}

/* Adjust the width of the table columns */
th:first-child,
td:first-child {
  width: 20%;
}

th:nth-child(2),
td:nth-child(2) {
  width: 60%;
}

th:nth-child(3),
td:nth-child(3) {
  width: 20%;
}

</style>
<div class="parent-container">
  <div id="contact-form">
    <label for="image-preview">Photo</label>
   <img src="data:image/jpg;base64,{{ transporteur.photo}} " >
    <label for="nom">Nom:</label>
    <input type="text" id="nom" name="nom" value={{transporteur.nom}} >
    <label for="prenom">Prenom:</label>
    <input type="text" id="prenom" name="prenom" value={{transporteur.prenom}}  >
    <label for="numero-contact">Numéro du contact:</label>
    <input type="text" id="numero-contact" name="numero-contact"  value={{transporteur.numTel}}>
  </div>
</div>


         <!-- Footer-->
