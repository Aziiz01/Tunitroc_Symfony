{% extends 'base.html.twig' %}





{% block body %}
 <head>

        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Tunitroc page</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Bootstrap icons-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
        <!-- Core theme CSS (includes Bootstrap)-->
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    </head>
    <body>
   <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand" href="#!">Tunitroc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                        <li class="nav-item"><a class="nav-link active" aria-current="page" href="{{ path('app_front') }}">Home</a></li>
<li class="nav-item">
    <a class="nav-link" href="{{ path('app_transporteur') }}">Transport</a>
</li>
<li class="nav-item">
    <a class="nav-link" href="{{ path('app_echange') }}">Echanges</a>
</li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Shop</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#!">All Products</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="#!">Popular Items</a></li>
                                <li><a class="dropdown-item" href="#!">New Arrivals</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <button class="btn btn-outline-dark" type="submit">
                            <i class="bi-cart-fill me-1"></i>
                            Cart
                            <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                        </button>
                    </form>
                </div>
            </div>
        </nav>
        <div class="hcontainer">
        <div>
<img src="data:image/jpeg;base64,{{ transporteur.photo }}" />
<div style="text-align: center;">
  <h2>Bienvenue de retour, cher {{transporteur.nom}}!  <i class="fa-solid fa-truck-fast fa-bounce" style="color: #0c47ac;"></i> </h2>
  <div>Nombre de livraisons confirmées : {{ livredEchangesCount }} <i class="fa-solid fa-check" style="color: #098b48;"></i></div>
<div>Somme totale : {{ totalAmount }} TND</div>
<div class="coming-soon">Coming soon: Temps restant compteur</div>
</div>
  </div>
        <div class="container">

<table class="table table-hover table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th scope="col">ID de l'échange <i class="fa-solid fa-arrow-right-arrow-left fa-fade"></i></th>
            <th scope="col">État de la livraison <i class="fa-solid fa-truck-ramp-box fa-fade"></i></th>
            <th scope="col">Localisation <i class="fa-solid fa-location-dot fa-fade"></i></th>
            <th scope="col">Actions <i class="fa-solid fa-pen-to-square fa-fade"></i></th>
        </tr>
    </thead>
    <tbody>
        {% for echange in echanges %}
            <tr>
                <td>{{ echange.id }}</td>
                <td>{{ echange.etat }}</td>
                <td>{{ echange.location }}</td>
                <td>
                    <div class="d-flex justify-content-center">
                        <a href="{{ path('update_trechange', {'id': echange.id}) }}" class="btn btn-sm btn-primary me-2">
                            <i class="fa-solid fa-file-pen"></i> Modifier
                        </a>
                        <form action="{{ path('delete_echange', {'id': echange.id}) }}" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet échange?')">
                                <i class="fa fa-trash"></i> Supprimer
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

</div>
<style>
  /* Container for the form and table */
 
.coming-soon {
  position: absolute;
  top: 50px;
  right: 10px;
  background-color: #ffcc00;
  color: #000;
  padding: 10px;
  font-weight: bold;
  font-size: 1.2em;
  border-radius: 5px;
}



  /* Make the table smaller */
table {
  font-size: 14px;
}

/* Position the table on the left side of the screen */


/* Adjust the width of the table columns */
th:first-child,
td:first-child {
  width: 20%;
}

th:nth-child(2),
td:nth-child(2) {
  width: 60%;
}

th:nth-child(3),
td:nth-child(3) {
  width: 20%;
}

</style>




        {% block footer %}
   <footer class="fixed-bottom bg-dark">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p></div>
        </footer>
{% endblock %}
{% endblock %}
